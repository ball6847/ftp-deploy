{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es5", "es2015", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
